extends layout

append js
	script(src="/js/population-pyramid.js")
	script(src="/js/education-chart.js")
	script(src="/js/income-chart.js")
	script(src="/js/county-details.js")
	script(src="/js/state-chart.js")
	script(src="/js/main.js")

block content
	.container-fluid
		h2 Washington Map
		.row.controls-wrapper.hide
		.col-sm-12

		.row
			.col-sm-5
				div.county-tooltip
				div.selected-county-tooltip
				#map.loading
		.row#county-details.hide
			.col-sm-12
				h2#countyname
				.row
					.col-sm-6
						h3 Education
						div#options
							label
								input.educationToggle(type="radio", name="gender_filter", value="1", checked="true" ) 
								|  Total
							br
							label
								input.educationToggle(type="radio", name="gender_filter", value="0") 
								|  By Gender
						.row
							.col-sm-4.education-chart#education
							.col-sm-4.education-chart#femaleEducation
							.col-sm-4.education-chart#maleEducation		
					.col-sm-6
						h3 Population
						#population
				.row
					.col-sm-12
						h3 Income
						#income


