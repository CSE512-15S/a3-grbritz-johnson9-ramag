extends layout

append js
  script(src="/js/us-counties.js")

block content
  .container-fluid#us-counties
    h2 US County Map
    .row.controls-wrapper.hide
      .col-sm-12
        label
          input(type="radio", name="search-mode-toggle", value="zipcode")
          span Zipcode
        label
          input(type="radio", name="search-mode-toggle", value="county")
          span County
        label 
          strong Highlight counties containing zip code: 
          input(name="zip-code-filter", type="text", placeholder="try typing 98015")


    .row
      .col-sm-12
        div.county-tooltip
        #map
    .row
      .col-sm-12
        #state

    .info-pane-wrapper.hide
      .row
        .col-sm-12


    
    